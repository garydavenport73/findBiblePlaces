{
    "manifest_version": 2,
    "name": "Bible Place Finder",
    "version": "0.0.1",
    "description": "This extension helps the user locate geographic places listed in the Bible and facilitates viewing them on a map.",
    "icons": {
        "16": "icons/bpf16x16.png",
        "32": "icons/bpf32x32.png",
        "48": "icons/bpf48x48.png",
        "128": "icons/bpf128x128.png"
    },

    "homepage_url": "https://github.com/garydavenport73/findBiblePlaces/",

    "browser_action": {
        "default_icon": "icons/bpf16x16.png",
        "default_title": "Bible Place Finder",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "/src/content.js"
        ],
        "run_at": "document_end"
    }]
}